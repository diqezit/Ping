<Window
    x:Class="PingTestTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PingTestTool"
    Title="{DynamicResource WindowTitle}"
    Width="800" Height="620"
    MinWidth="640" MinHeight="480"
    Background="{DynamicResource BgPrimary}"
    Foreground="{DynamicResource FgPrimary}"
    WindowStartupLocation="CenterScreen">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.StartPingCommand}"
                        Executed="StartPingCommand_Executed"
                        CanExecute="StartPingCommand_CanExecute"/>
        <CommandBinding Command="{x:Static local:MainWindow.StopPingCommand}"
                        Executed="StopPingCommand_Executed"
                        CanExecute="StopPingCommand_CanExecute"/>
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="Return" Modifiers="Ctrl"
                    Command="{x:Static local:MainWindow.StartPingCommand}"/>
        <KeyBinding Key="Escape"
                    Command="{x:Static local:MainWindow.StopPingCommand}"/>
    </Window.InputBindings>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Margin="0,0,0,8">
            <MenuItem Header="{DynamicResource SettingsHeader}">
                <MenuItem Header="{DynamicResource ThemeHeader}">
                    <MenuItem Header="{DynamicResource DarkThemeHeader}" Click="DarkTheme_Click"/>
                    <MenuItem Header="{DynamicResource LightThemeHeader}" Click="LightTheme_Click"/>
                </MenuItem>
                <MenuItem Header="{DynamicResource LanguageHeader}">
                    <MenuItem Header="Русский" Click="RussianLanguage_Click"/>
                    <MenuItem Header="English" Click="EnglishLanguage_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource PingTabHeader}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Content="{DynamicResource URLLabel}"
                               VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtURL" Grid.Row="0" Grid.Column="2"
                                 Text="8.8.8.8" VerticalContentAlignment="Center" Margin="0,0,0,8"/>

                        <Label Grid.Row="1" Grid.Column="0"
                               Content="{DynamicResource PingCountLabel}"
                               VerticalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtPingCount" Grid.Row="1" Grid.Column="2"
                                 Text="10" VerticalContentAlignment="Center" Margin="0,0,0,8"/>

                        <Label Grid.Row="2" Grid.Column="0"
                               Content="{DynamicResource TimeoutLabel}"
                               VerticalAlignment="Center"/>
                        <TextBox x:Name="txtTimeout" Grid.Row="2" Grid.Column="2"
                                 Text="1000" VerticalContentAlignment="Center"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnPing" Grid.Column="0"
                                Content="{DynamicResource StartTestButton}"
                                Click="BtnPing_Click"/>
                        <Button x:Name="btnStop" Grid.Column="2"
                                Content="{DynamicResource StopButton}"
                                Click="BtnStop_Click" IsEnabled="False"/>
                        <Button x:Name="btnClearResultsPing" Grid.Column="4"
                                Content="{DynamicResource ClearResultsButton}"
                                Click="BtnClearResultsPing_Click"/>
                        <Button x:Name="btnShowGraph" Grid.Column="6"
                                Content="{DynamicResource GraphButton}"
                                Click="BtnShowGraph_Click"/>
                        <Button x:Name="btnExportPing" Grid.Column="8"
                                Content="{DynamicResource ExportButton}"
                                Click="BtnExportPing_Click"/>
                    </Grid>

                    <ProgressBar x:Name="progressBar" Grid.Row="2" Margin="0,0,0,8"/>

                    <Border Grid.Row="3"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1"
                            Background="{DynamicResource BgInput}">
                        <TextBox x:Name="txtResults"
                                 IsReadOnly="True"
                                 TextWrapping="NoWrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Padding="8"/>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource TraceRouteTabHeader}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="92"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="StatusTextBlock" Grid.Row="0"
                               FontWeight="SemiBold" FontSize="14"
                               TextWrapping="Wrap" Margin="0,0,0,8"/>

                    <Border Grid.Row="1"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1"
                            Background="{DynamicResource BgSecondary}"
                            Padding="8" Margin="0,0,0,8">
                        <Canvas x:Name="RouteCanvas" ClipToBounds="True"/>
                    </Border>

                    <DataGrid x:Name="ResultsList" Grid.Row="2"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{DynamicResource NrColumnHeader}"
                                                Binding="{Binding Nr}" Width="40"/>
                            <DataGridTextColumn Header="{DynamicResource IPAddressColumnHeader}"
                                                Binding="{Binding IPAddress}" Width="120"/>
                            <DataGridTextColumn Header="{DynamicResource DomainNameColumnHeader}"
                                                Binding="{Binding DomainName}" Width="*"/>
                            <DataGridTextColumn Header="{DynamicResource LossColumnHeader}"
                                                Binding="{Binding Loss}" Width="55"/>
                            <DataGridTextColumn Header="{DynamicResource SentColumnHeader}"
                                                Binding="{Binding Sent}" Width="55"/>
                            <DataGridTextColumn Header="{DynamicResource ReceivedColumnHeader}"
                                                Binding="{Binding Received}" Width="55"/>
                            <DataGridTextColumn Header="{DynamicResource BestColumnHeader}"
                                                Binding="{Binding Best}" Width="55"/>
                            <DataGridTextColumn Header="{DynamicResource AverageColumnHeader}"
                                                Binding="{Binding Avrg}" Width="55"/>
                            <DataGridTextColumn Header="{DynamicResource WorstColumnHeader}"
                                                Binding="{Binding Wrst}" Width="55"/>
                            <DataGridTextColumn Header="{DynamicResource LastColumnHeader}"
                                                Binding="{Binding Last}" Width="55"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="3" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnStartTrace" Grid.Column="0"
                                Content="{DynamicResource StartTraceButton}"
                                Click="BtnStartTrace_Click"/>
                        <Button x:Name="btnStopTrace" Grid.Column="2"
                                Content="{DynamicResource StopTraceButton}"
                                Click="BtnStopTrace_Click" IsEnabled="False"/>
                        <Button x:Name="btnClearResults" Grid.Column="4"
                                Content="{DynamicResource ClearResultsButton}"
                                Click="BtnClearResults_Click"/>
                        <Button x:Name="btnSaveResults" Grid.Column="6"
                                Content="{DynamicResource SaveResultsButton}"
                                Click="BtnSaveResults_Click"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>