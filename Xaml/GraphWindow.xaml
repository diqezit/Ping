<Window
    x:Class="PingTestTool.GraphWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{DynamicResource GraphWindowTitle}"
    Width="700" Height="480"
    MinWidth="500" MinHeight="350"
    Background="{DynamicResource BgPrimary}"
    Foreground="{DynamicResource FgPrimary}"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            Background="{DynamicResource BgSecondary}">
            <Canvas x:Name="GraphCanvas" ClipToBounds="True"/>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Min:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                <TextBlock x:Name="MinValue" Text="0" FontFamily="Consolas"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Avg:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                <TextBlock x:Name="AvgValue" Text="0" FontFamily="Consolas"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Max:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                <TextBlock x:Name="MaxValue" Text="0" FontFamily="Consolas"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Cur:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                <TextBlock x:Name="CurrentValue" Text="0" FontFamily="Consolas"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Points:" VerticalAlignment="Center"/>

            <Slider
                x:Name="PointsSlider"
                Grid.Column="2"
                Minimum="25" Maximum="500" Value="100"
                TickFrequency="25" IsSnapToTickEnabled="True"
                VerticalAlignment="Center"
                ValueChanged="PointsSlider_ValueChanged"/>

            <TextBlock
                x:Name="PointsValue"
                Grid.Column="4"
                Text="100"
                TextAlignment="Right"
                VerticalAlignment="Center"
                FontFamily="Consolas"/>
        </Grid>
    </Grid>
</Window>