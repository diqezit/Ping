<Window 
    x:Class="PingTestTool.GraphWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    Title="Ping Graph"
    Height="500" 
    Width="700"
    MinWidth="600" 
    MinHeight="400"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome 
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"/>
    </shell:WindowChrome.WindowChrome>

    <Border 
        Background="{DynamicResource WindowBackground}"
        BorderBrush="{DynamicResource ContentBorder}"
        BorderThickness="1"
        CornerRadius="12">
        <Grid 
            UseLayoutRounding="True" 
            SnapsToDevicePixels="True" 
            TextOptions.TextFormattingMode="Display">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border 
                Grid.Row="0" 
                Background="{DynamicResource MenuBackground}"
                BorderBrush="{DynamicResource ContentBorder}"
                BorderThickness="0,0,0,1"
                CornerRadius="12,12,0,0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Window Title -->
                    <TextBlock 
                        Grid.Column="1"
                        Text="Ping Response Time Graph"
                        Style="{StaticResource TextBlockStyle}"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <!-- Window Controls -->
                    <StackPanel 
                        Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                        <Button 
                            x:Name="btnMinimize"
                            Click="BtnMinimize_Click"
                            Style="{StaticResource WindowButtonStyle}"
                            ToolTip="Minimize"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                            <Path 
                                Data="M0,0 L10,0" 
                                Stroke="{DynamicResource TextBlockForeground}" 
                                StrokeThickness="1.5" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="0,9,0,0"/>
                        </Button>

                        <Button 
                            x:Name="btnClose"
                            Click="BtnClose_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="Close"
                            Margin="0,0,5,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                            <Path 
                                Data="M0,0 L10,10 M0,10 L10,0" 
                                Stroke="{DynamicResource TextBlockForeground}" 
                                StrokeThickness="1.5" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Border 
                Grid.Row="1" 
                Padding="15"
                CornerRadius="0,0,12,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Graph View -->
                    <Border 
                        Grid.Row="0"
                        Style="{StaticResource ContentBorderStyle}"
                        Padding="0">
                        <oxy:PlotView 
                            x:Name="plotView"
                            Background="{DynamicResource ResultsBackground}"
                            Model="{Binding PingPlotModel}"
                            Margin="0"/>
                    </Border>

                    <!-- Statistics Panel -->
                    <Border 
                        Grid.Row="1" 
                        Style="{StaticResource ContentBorderStyle}"
                        Margin="0,15,0,0">
                        <UniformGrid Rows="1" Columns="4" Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <TextBlock 
                                    Text="Minimum:" 
                                    FontWeight="Bold" 
                                    Foreground="{DynamicResource TextBlockForeground}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                                <TextBlock 
                                    x:Name="txtMin" 
                                    Foreground="{DynamicResource MenuItemForeground}" 
                                    Background="{DynamicResource TextBoxBackground}"
                                    Width="60" 
                                    TextAlignment="Center"
                                    Padding="5,3"
                                    VerticalAlignment="Center"
                                    FontFamily="Consolas"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <TextBlock 
                                    Text="Average:" 
                                    FontWeight="Bold" 
                                    Foreground="{DynamicResource TextBlockForeground}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                                <TextBlock 
                                    x:Name="txtAvg" 
                                    Foreground="{DynamicResource MenuItemForeground}" 
                                    Background="{DynamicResource TextBoxBackground}"
                                    Width="60" 
                                    TextAlignment="Center"
                                    Padding="5,3"
                                    VerticalAlignment="Center"
                                    FontFamily="Consolas"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <TextBlock 
                                    Text="Maximum:" 
                                    FontWeight="Bold" 
                                    Foreground="{DynamicResource TextBlockForeground}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                                <TextBlock 
                                    x:Name="txtMax" 
                                    Foreground="{DynamicResource MenuItemForeground}" 
                                    Background="{DynamicResource TextBoxBackground}"
                                    Width="60" 
                                    TextAlignment="Center"
                                    Padding="5,3"
                                    VerticalAlignment="Center"
                                    FontFamily="Consolas"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <TextBlock 
                                    Text="Current:" 
                                    FontWeight="Bold" 
                                    Foreground="{DynamicResource TextBlockForeground}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                                <TextBlock 
                                    x:Name="txtCur" 
                                    Foreground="{DynamicResource MenuItemForeground}" 
                                    Background="{DynamicResource TextBoxBackground}"
                                    Width="60" 
                                    TextAlignment="Center"
                                    Padding="5,3"
                                    VerticalAlignment="Center"
                                    FontFamily="Consolas"/>
                            </StackPanel>
                        </UniformGrid>
                    </Border>

                    <!-- Controls Panel -->
                    <Border 
                        Grid.Row="2" 
                        Style="{StaticResource ContentBorderStyle}"
                        Margin="0,15,0,0">
                        <Grid Margin="10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock 
                                Text="Data Points:"
                                Foreground="{DynamicResource TextBlockForeground}"
                                VerticalAlignment="Center"
                                FontWeight="Medium"
                                Margin="0,0,15,0"/>

                            <Slider 
                                Grid.Column="1"
                                Minimum="25"
                                Maximum="10000"
                                Value="{Binding MaxVisiblePoints, UpdateSourceTrigger=PropertyChanged}"
                                TickFrequency="25"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"
                                Style="{StaticResource ModernSliderStyle}"/>

                            <Border 
                                Grid.Column="2"
                                Background="{DynamicResource TextBoxBackground}"
                                BorderBrush="{DynamicResource TextBoxBorder}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,3"
                                Margin="15,0,0,0">
                                <TextBlock 
                                    Foreground="{DynamicResource TextBoxForeground}"
                                    Text="{Binding MaxVisiblePoints}"
                                    FontFamily="Consolas"
                                    VerticalAlignment="Center"
                                    MinWidth="50"
                                    TextAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>