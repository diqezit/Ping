<Window x:Class="PingTestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PingTestTool"
        Title="Инструмент для тестирования Ping"
        Width="500" Height="600"
        MinWidth="500" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#252526">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Группа ввода -->
            <RowDefinition Height="Auto"/>
            <!-- Панель кнопок -->
            <RowDefinition Height="Auto"/>
            <!-- Прогресс-бар -->
            <RowDefinition Height="*"/>
            <!-- Результаты -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0" Text="Инструмент для тестирования Ping"
                   FontSize="26" FontWeight="Bold" Foreground="#D4D4D4"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Группа ввода параметров -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="5" Padding="10" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- URL -->
                <Label Grid.Row="0" Grid.Column="0" Content="URL ссылка:" 
                       Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtURL" Grid.Row="0" Grid.Column="1" 
                         Text="{x:Static local:MainWindow.DEFAULT_URL}"
                         Style="{StaticResource TextBoxStyle}" VerticalAlignment="Center"/>
                <Image x:Name="imgWarning_3" Grid.Row="0" Grid.Column="2" Source="Images/error.png" 
                       Visibility="Collapsed" Height="24" Width="24" Margin="5,0,0,0"/>

                <!-- Количество пакетов -->
                <Label Grid.Row="1" Grid.Column="0" Content="К-во пакетов:" 
                       Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,5,5,0"/>
                <TextBox x:Name="txtPingCount" Grid.Row="1" Grid.Column="1" Text="10"
                         Style="{StaticResource TextBoxStyle}" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <Image x:Name="imgWarning_1" Grid.Row="1" Grid.Column="2" Source="Images/error.png" 
                       Visibility="Collapsed" Height="24" Width="24" Margin="5,5,0,0"/>

                <!-- Таймаут -->
                <Label Grid.Row="2" Grid.Column="0" Content="Таймаут (мс):" 
                       Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,5,5,0"/>
                <TextBox x:Name="txtTimeout" Grid.Row="2" Grid.Column="1" Text="1000"
                         Style="{StaticResource TextBoxStyle}" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <Image x:Name="imgWarning" Grid.Row="2" Grid.Column="2" Source="Images/warning.png" 
                       Visibility="Collapsed" Height="24" Width="24" Margin="5,5,0,0"/>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="btnPing" Content="Запустить тест" Click="BtnPing_Click" 
            Style="{StaticResource ButtonStyle}" Margin="5,0"/>
            <Button x:Name="btnStop" Content="Стоп" Click="BtnStop_Click" 
            Style="{StaticResource ButtonStyle}" IsEnabled="False" Margin="5,0"/>
            <Button x:Name="btnTraceRoute" Content="Трассировка" Click="BtnTraceRoute_Click" 
            Style="{StaticResource ButtonStyle}" Margin="5,0"/>
            <Button x:Name="btnShowGraph" Content="График" Click="BtnShowGraph_Click" 
            Style="{StaticResource ButtonStyle}" Margin="5,0"/>
        </StackPanel>

        <!-- Прогресс-бар -->
        <ProgressBar x:Name="progressBar" Grid.Row="3" Height="20" Margin="0,10,0,10"
                     Style="{StaticResource {x:Type ProgressBar}}" />

        <!-- Поле результатов -->
        <TextBox x:Name="txtResults" Grid.Row="4" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"
                 VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" Margin="0,10,0,0"/>
    </Grid>
</Window>
